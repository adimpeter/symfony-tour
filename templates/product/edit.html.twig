{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('stylesheet/style.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
            {{  form_row(form.title) }}
            {{ form_row(form.description) }}
            {{ form_row(form.save, {'label' : 'update'}) }}

            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}